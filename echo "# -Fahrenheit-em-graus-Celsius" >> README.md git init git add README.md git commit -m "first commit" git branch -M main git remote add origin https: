# inclui  < iostream >

usando  namespace  std ;

// °C = (°F - 32)/1,8
// °F = °C × 1,8 + 32

float  CtoF ( float c) {
    retorno (c* 1,8 ) + 32 ;
}

float  FtoC ( float f){
    retorno (f- 32 )/ 1,8 ;
}

int  main (){

    cout << " \n 32° C = " << CtoF ( 32 )<< endl;

    cout << " \n 0° F = " << FtoC ( 0 )<< endl;
    retorna  0 ;
}
